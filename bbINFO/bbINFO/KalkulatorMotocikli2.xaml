<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="bbINFO.KalkulatorMotocikli2">
    <ContentPage.Content>
        <StackLayout Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>

                <Label Text="OSIGURANJE" FontSize="Body" Grid.Row="0" Grid.Column="0" Padding="5,0,0,0" HorizontalOptions="Start"/>
                <Label x:Name="polisaIspis"  FontSize="16" Grid.Row="0" Grid.Column="1" HorizontalOptions="EndAndExpand" VerticalOptions="CenterAndExpand" Padding="0,0,5,0"/>

                <BoxView HeightRequest="1" Color="#03A9F4" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"/>


                <Label Text="BIHAMK" FontSize="Body" Grid.Row="2" Grid.Column="0" Padding="5,0,0,0"/>
                <Label x:Name="bihamkIspis"  FontSize="16" Grid.Row="2" Grid.Column="1" HorizontalOptions="EndAndExpand" VerticalOptions="CenterAndExpand" Padding="0,0,5,0"/>

                <BoxView HeightRequest="1" Color="#03A9F4" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"/>


                <Label Text="FOND ZA ZAŠTITU VODA" FontSize="Body" Grid.Row="4" Grid.Column="0" Padding="5,0,0,0"/>
                <Label x:Name="vodoprivreda"  FontSize="16" Grid.Row="4" Grid.Column="1" HorizontalOptions="EndAndExpand" VerticalOptions="CenterAndExpand" Padding="0,0,5,0"/>

                <BoxView HeightRequest="1" Color="#03A9F4" Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2"/>


                <Label Text="POREZ NA MOTORNO VOZILO" FontSize="Body" Grid.Row="6" Grid.Column="0" Padding="5,0,0,0"/>
                <Label x:Name="porezIspis"  FontSize="16" Grid.Row="6" Grid.Column="1" HorizontalOptions="EndAndExpand" VerticalOptions="CenterAndExpand" Padding="0,0,5,0"/>

                <BoxView HeightRequest="1" Color="#03A9F4" Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2"/>


                <Label Text="PUTARINA" FontSize="Body" Grid.Row="8" Grid.Column="0" Padding="5,0,0,0"/>
                <Label x:Name="putarinaIspis"  FontSize="16" Grid.Row="8" Grid.Column="1" HorizontalOptions="EndAndExpand" VerticalOptions="CenterAndExpand" Padding="0,0,5,0"/>

                <BoxView HeightRequest="1" Color="#03A9F4" Grid.Row="9" Grid.Column="0" Grid.ColumnSpan="2"/>


                <Label Text="FOND ZA ZAŠTITU OKOLIŠA" FontSize="Body" Grid.Row="10" Grid.Column="0" Padding="5,0,0,0"/>
                <Label x:Name="okolisIspis"  FontSize="16" Grid.Row="10" Grid.Column="1" HorizontalOptions="EndAndExpand" VerticalOptions="CenterAndExpand" Padding="0,0,5,0"/>

                <BoxView HeightRequest="1" Color="#03A9F4" Grid.Row="11" Grid.Column="0" Grid.ColumnSpan="2"/>


                <Label Text="NOVE REGISTARSKE TABLICE" FontSize="Body" Grid.Row="12" Grid.Column="0" Padding="5,0,0,0"/>
                <Label x:Name="noveTabliceIspis"  FontSize="16" Grid.Row="12" Grid.Column="1" HorizontalOptions="EndAndExpand" VerticalOptions="CenterAndExpand" Padding="0,0,5,0"/>

                <BoxView HeightRequest="1" Color="#03A9F4" Grid.Row="13" Grid.Column="0" Grid.ColumnSpan="2"/>


                <Label Text="IZGUBLJENE/OŠTEĆENE REGISTARSKE TABLICE" FontSize="Body" Grid.Row="14" Grid.Column="0" Padding="5,0,0,0"/>
                <Label x:Name="izgubljeneTabliceIspis"  FontSize="16" Grid.Row="14" Grid.Column="1" HorizontalOptions="EndAndExpand"  Padding="0,0,5,0" VerticalOptions="CenterAndExpand"/>

                <BoxView HeightRequest="1" Color="#03A9F4" Grid.Row="15" Grid.Column="0" Grid.ColumnSpan="2"/>


                <Label Text="POTVRDA O REGISTRACIJI" FontSize="Body" Grid.Row="16" Grid.Column="0" Padding="5,0,0,0"/>
                <Label x:Name="potvrdaORegistracijiIspis"  FontSize="16" Grid.Row="16" Grid.Column="1" HorizontalOptions="EndAndExpand" VerticalOptions="CenterAndExpand" Padding="0,0,5,0"/>

                <BoxView HeightRequest="1" Color="#03A9F4" Grid.Row="17" Grid.Column="0" Grid.ColumnSpan="2"/>



                <Label Text="POTVRDA O VLASNIŠTVU" FontSize="Body" Grid.Row="18" Grid.Column="0" Padding="5,0,0,0"/>
                <Label x:Name="potvrdaOVlasnistvuIspis"  FontSize="16" Grid.Row="18" Grid.Column="1" HorizontalOptions="EndAndExpand" VerticalOptions="CenterAndExpand" Padding="0,0,5,0"/>

                <BoxView HeightRequest="1" Color="#03A9F4" Grid.Row="19" Grid.Column="0" Grid.ColumnSpan="2"/>


                <Label Text="STIKER" FontSize="Body" Grid.Row="20" Grid.Column="0" Padding="5,0,0,0"/>
                <Label x:Name="stikerIspis"  FontSize="16" Grid.Row="20" Grid.Column="1" HorizontalOptions="EndAndExpand" VerticalOptions="CenterAndExpand" Padding="0,0,5,0"/>

                <BoxView HeightRequest="1" Color="#03A9F4" Grid.Row="21" Grid.Column="0" Grid.ColumnSpan="2"/>


                <Label Text="TEHNIČKI PREGLED" FontSize="Body" Grid.Row="22" Grid.Column="0" Padding="5,0,0,0"/>
                <Label x:Name="tehnickiIspis"  FontSize="16" Grid.Row="22" Grid.Column="1" HorizontalOptions="EndAndExpand" VerticalOptions="CenterAndExpand" Padding="0,0,5,0"/>

                <BoxView HeightRequest="1" Color="#03A9F4" Grid.Row="23" Grid.Column="0" Grid.ColumnSpan="2"/>


                <Label Text="TAKSA" FontSize="Body" Grid.Row="24" Grid.Column="0" Padding="5,0,0,0"/>
                <Label x:Name="taksaIspis"  FontSize="16" Grid.Row="24" Grid.Column="1" HorizontalOptions="EndAndExpand" VerticalOptions="CenterAndExpand" Padding="0,0,5,0"/>

                <BoxView HeightRequest="1" Color="#03A9F4" Grid.Row="25" Grid.Column="0" Grid.ColumnSpan="2"/>

                <Label Text="ZELENI KARTON" FontSize="Body" Grid.Row="26" Grid.Column="0" Padding="5,0,0,0"/>
                <Label x:Name="zeleniKartonIspis"  FontSize="16" Grid.Row="26" Grid.Column="1" HorizontalOptions="EndAndExpand" VerticalOptions="CenterAndExpand" Padding="0,0,5,0"/>

                <BoxView HeightRequest="1" Color="#03A9F4" Grid.Row="27" Grid.Column="0" Grid.ColumnSpan="2"/>

                <Label Text="UKUPNO" FontSize="18" FontAttributes="Bold" Grid.Row="28" Grid.Column="0" Padding="5,0,0,0" TextColor="DimGray"/>
                <Label x:Name="ukupnaIspis" FontSize="18" FontAttributes="Bold" Grid.Row="28" Grid.Column="1" HorizontalOptions="EndAndExpand" VerticalOptions="CenterAndExpand" Padding="0,0,5,0"/>

            </Grid>


        </StackLayout>
    </ContentPage.Content>
</ContentPage>